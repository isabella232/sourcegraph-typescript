{
  "extends": "@sourcegraph/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable", "dom"],
    "typeRoots": ["../node_modules/@types", "./src/types"],
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": ["src/**/*.ts"],
}
